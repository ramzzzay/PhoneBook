<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <!-- Chrome, Firefox OS and Opera -->
    <meta name="theme-color" content="#333333">
    <!-- Windows Phone -->
    <meta name="msapplication-navbutton-color" content="#333333">
    <!-- iOS Safari -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <title>@ViewBag.Title</title>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic" rel="stylesheet" type="text/css">
</head>
<body id="page-top">

<nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Phone Book", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <!-- Trigger the modal with a button -->
            <div id="logins"></div>
        </div>
    </div>
</nav>


<header id="splash" data-speed="3" data-type="background" style="text-align: center">
    <div class="header-content">
        <div class="header-content-inner">
            <h1>Phone Book</h1>
            <hr>
            <p>We are thinking when your are dreaming!</p>
            <a href="#content" id="to-down">
                <i class="fa fa-arrow-down"></i>
            </a>
        </div>
    </div>
</header>

<div>
    @RenderBody()
    <hr/>
</div>
<script src="~/Assets/js/wow.min.js"></script>
<script src="~/Assets/js/bundle.js"></script>
@RenderSection("scripts", false)
</body>
</html>